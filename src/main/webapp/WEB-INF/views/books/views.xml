<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- The logical view name "singers/list" is mapped to the corresponding body 
        attribute of the list.jspx view to display.  Then in defaults.jspx 
        <tiles:insertAttribute name="body"/> renders body of list view with list.jspx-->
    <definition extends="default" name="books/list">
        <put-attribute name="body" value="/WEB-INF/views/books/list.jspx" />
    </definition>
    <definition extends="default" name="books/show">
        <put-attribute name="body" value="/WEB-INF/views/books/show.jspx" />
    </definition>
    <definition extends="default" name="books/update">
        <put-attribute name="body" value="/WEB-INF/views/books/edit.jspx" />
    </definition>
    <definition extends="default" name="books/create">
        <put-attribute name="body" value="/WEB-INF/views/books/edit.jspx" />
    </definition>
</tiles-definitions>
